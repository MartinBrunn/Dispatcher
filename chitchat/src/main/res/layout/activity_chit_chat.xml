<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="de.devacon.xorando.chitchat.ChitChatActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:id="@+id/fullscreen_content_controls" android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

            <ImageButton android:id="@+id/hand"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:keepScreenOn="false"
                android:layout_weight="1.5" android:text="@string/dummy_button"
                android:src="@drawable/handschuhklein" />
            <LinearLayout android:id="@+id/content_controls"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <ImageView android:id="@+id/personImage"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:keepScreenOn="false"
                    android:layout_weight="1" android:text="@string/dummy_button"
                    android:src="@drawable/personxblau" />
            </LinearLayout>

            <!-- TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
                android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
                android:textStyle="bold" android:textSize="50sp" android:gravity="center"
                android:text="@string/dummy_content" / -->

    </FrameLayout>

</FrameLayout>
