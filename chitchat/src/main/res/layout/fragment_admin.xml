<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/fragmentadmin"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:paddingLeft="@dimen/grid_padding"
    android:paddingRight="@dimen/grid_padding"
    android:paddingTop="@dimen/grid_padding"
    android:paddingBottom="@dimen/grid_padding"
    tools:context=".AdminActivityFragment">

    <GridLayout android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/grid_padding"
        android:layout_marginTop="@dimen/grid_padding"
        android:layout_marginRight="@dimen/grid_padding"
        android:layout_marginBottom="@dimen/grid_padding"
        android:rowOrderPreserved="true"
        android:columnCount="2"
        android:rowCount="2"
        >

        <ImageButton android:id="@+id/play" android:text="@string/hello_world"
            android:layout_width="@dimen/iconheight"
            android:layout_height="@dimen/iconheight"
            android:paddingLeft="@dimen/grid_padding"
            android:paddingRight="@dimen/grid_padding"
            android:paddingTop="@dimen/grid_padding"
            android:paddingBottom="@dimen/grid_padding"
            android:adjustViewBounds="true"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/play"/>
        <ImageButton android:id="@+id/stop" android:text="@string/hello_world"
            android:layout_width="@dimen/iconheight"
            android:layout_height="@dimen/iconheight"
            android:paddingLeft="@dimen/grid_padding"
            android:paddingRight="@dimen/grid_padding"
            android:paddingTop="@dimen/grid_padding"
            android:paddingBottom="@dimen/grid_padding"
            android:adjustViewBounds="true"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/stopplay"/>
        <ImageButton android:id="@+id/delete" android:text="@string/delete"
            android:layout_width="@dimen/iconheight"
            android:layout_height="@dimen/iconheight"
            android:paddingLeft="@dimen/grid_padding"
            android:paddingRight="@dimen/grid_padding"
            android:paddingTop="@dimen/grid_padding"
            android:paddingBottom="@dimen/grid_padding"
            android:adjustViewBounds="true"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/delete"/>
        <ImageButton android:id="@+id/list" android:text="@string/hello_world"
            android:layout_width="@dimen/iconheight"
            android:layout_height="@dimen/iconheight"
            android:paddingLeft="@dimen/grid_padding"
            android:paddingRight="@dimen/grid_padding"
            android:paddingTop="@dimen/grid_padding"
            android:paddingBottom="@dimen/grid_padding"
            android:adjustViewBounds="true"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/liste"/>
        <ImageButton android:id="@+id/person" android:text="@string/hello_world"
            android:layout_width="@dimen/iconheight"
            android:layout_height="@dimen/iconheight"
            android:paddingLeft="@dimen/grid_padding"
            android:paddingRight="@dimen/grid_padding"
            android:paddingTop="@dimen/grid_padding"
            android:paddingBottom="@dimen/grid_padding"
            android:adjustViewBounds="true"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:src="@drawable/person"/>


    </GridLayout>
</RelativeLayout>
